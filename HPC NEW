#include<iostream>
#include<queue>
using namespace std;

class node
{
public:
    node *left, *right;
    int data;
};

class Breadthfs
{
public:
    node *insert(node *, int);
    void bfs(node *);
};

node *Breadthfs::insert(node *root, int data)
{
    // Implementation remains the same
}

void Breadthfs::bfs(node *head)
{
    // Implementation remains the same
}

int main()
{
    node *root = NULL;
    int data;
    char ans;

    Breadthfs bfs;

    do
    {
        cout << "\n enter data=>";
        cin >> data;

        root = bfs.insert(root, data);

        cout << "do you want to insert one more node? (y/n): ";
        cin >> ans;

    } while (ans == 'y' || ans == 'Y');

    bfs.bfs(root);

    return 0;
}
